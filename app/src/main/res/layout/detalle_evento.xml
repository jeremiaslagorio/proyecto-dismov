<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombreEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:text="Nombre del evento"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/editarNombreButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Organiza"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/organizadorEvento"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarDescripcionButton" />

    <TextView
        android:id="@+id/organizadorEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Organizador"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/editarOrganizadorButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/descripcionEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Descripcion"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/editarDescripcionButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarNombreButton" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Fecha"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/fechaEvento"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarOrganizadorButton" />

    <TextView
        android:id="@+id/fechaEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Fecha"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView23"
        app:layout_constraintEnd_toStartOf="@+id/editarFechaButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView23" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Hora"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/horaEvento"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarFechaButton" />

    <TextView
        android:id="@+id/horaEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Hora"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/editarHoraButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <Button
        android:id="@+id/editarNombreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:onClick="onEditarNombreButtonClick"
        android:text="Editar"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/nombreEvento"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editarDescripcionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:onClick="onEditarDescripcionButtonClick"
        android:text="Editar"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/descripcionEvento"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editarOrganizadorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:onClick="onEditarOrganizadorButtonClick"
        android:text="Editar"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/organizadorEvento"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editarFechaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:onClick="onEditarFechaButtonClick"
        android:text="Editar"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/fechaEvento"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editarHoraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:onClick="onEditarHoraButtonClick"
        android:text="Editar"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/horaEvento"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
